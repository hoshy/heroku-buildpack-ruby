#!/bin/sh

if [ -z "$CNB_STACK_ID" ]; then
  # v2 API
  APP_DIR=$1
else
  PLATFORM_DIR=$1
  PLAN=$2
  # working is the cwd now
  # v3 API
  APP_DIR=$(pwd)
fi

if [ -f "$APP_DIR/Gemfile" ] || [ -f "$APP_DIR/plano-app/Gemfile" ] || [ -f "$APP_DIR/apps/plano-api/Gemfile" ] || [ -f "$APP_DIR/engines/core/Gemfile" ]; then
  echo "Ruby"
  exit 0
else
  echo "no"
  exit 1
fi
